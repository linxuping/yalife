<!--miniprogram/pages/editCard/editCard.wxml-->
<view class="container">
  <view style="width:90%;margin-bottom:80px;text-align:center">
    <textarea placeholder="(求助)发布什么？联系方式是什么？" style="margin-top:10px;width:100%;border:1px" value="{{content}}" bindinput="onInput" maxlength="1000"></textarea>
    <button style="margin:30rpx;" bindtap="chooseImage">图片</button> 
    <view>
    <image src="{{imgurl}}" wx:if="{{imgurl!=''}}"></image>
    </view>     
    <text style="bottom-margin:20px">我的位置：{{address}}</text>
    <button style="margin:30rpx;" bindtap="choosePos">修正位置,方便附近人找我</button>
  </view>
  <button class="add-btn" bindtap="updateCard" wx:if="{{cardId}}">更新卡片</button>
  <button class="add-btn" bindtap="updateCard" wx:else>生成卡片</button>
</view>