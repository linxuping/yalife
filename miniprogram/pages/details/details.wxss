.address{
  font-size:30rpx;
}
.address:before{
  height:25rpx;
  content:url(data:image/png;base64,);
}
.text-firstline{
  text-align: left;
  line-height: 2em;
  width: 95%;
  font-size: 45rpx;
}
/* 分隔线--底部 */
.line{
    width: 90%;    /* 分隔线的长度 */
    margin: auto;
    height: 1px;    /* 分隔线粗细 */
    text-align: center;
    font-size: 24rpx;
    color: #aaa;
    background: #ccc;
    margin-top: 60px;
    margin-bottom: 22px;
}
.line span{
    position: relative;
    top: -8px;
    background: #fff;
    padding: 0px 10px;
}
.oneLine {
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
}
.mulLine {
  -webkit-line-clamp: 3;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.model {
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 100;
}

.input-box {
  position: absolute;
  background-color: #f8f8f8;
  padding: 30rpx;
  padding-bottom: 130rpx;
  bottom: 40%;
  left: 0;
  right: 0;
  z-index: 101;
  margin-left:10px;
  margin-right:10px;
}

.textarea {
  background-color: #fff;
  width: 100%;
  padding: 5rpx;
  height: 6em;
  font-size: 15px;
  position: static;
}

.send {
  font-size: 14px;
  margin-top: 5rpx;
  color: #09bb07;
  float: right;
  position: static;
}

.invisible_model{
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  bottom: 0;
}

.no-border-btn{
  border: none;
  background: none;
}
.no-border-btn:after{
  border: none
}
.subbtn::after{border:0}
